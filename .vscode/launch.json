{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Streamlit: Run App",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": ["run", "${file}"],
            "cwd": "${workspaceFolder}",
            "justMyCode": false,  // Set to true to enable "Just My Code", or false to disable
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}